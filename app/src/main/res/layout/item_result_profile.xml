<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_shop"
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:elevation="10dp"
        android:padding="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/txt_name_result_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Resultado"
                android:textColor="@color/primary_text"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_result_rigth_answer_profile"
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:text="Correctas:"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:textColor="#ffffff"
                    android:id="@+id/txt_result_rigth_answer_number_profile"
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="8"
                    android:textSize="@dimen/text_size"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:gravity="right"
                    android:id="@+id/txt_result_wrong_answer_profile"
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:text="Incorrectas:"
                    android:textSize="@dimen/text_size"
                    android:textColor="#fff"/>

                <TextView

                    android:textColor="#ffffff"
                    android:id="@+id/txt_result_wrong_answer_number_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".4"
                    android:text="2"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:text="Tiempo:"
                    android:textSize="@dimen/text_size"
                    android:textColor="#fff"/>

                <TextView

                    android:textColor="#ffffff"
                    android:id="@+id/txt_result_time_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".4"
                    android:text="200 segundos"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView

                    android:gravity="right"
                    android:id="@+id/txt_result_win_coins_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Ganaste:"
                    android:textSize="@dimen/text_size"
                    android:textColor="#fff"/>

                <TextView
                    android:textColor="#ffffff"
                    android:id="@+id/txt_result_win_coins_number_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:layout_marginLeft="10dp"
                    android:text="2"
                    android:textSize="@dimen/text_size"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".3"
                    android:src="@drawable/coin" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">


                <Button

                    android:layout_gravity="center"
                    android:id="@+id/btn_publish_result"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5"
                    android:layout_margin="10dp"
                    android:text="Publicar"
                    android:textColor="@color/primary_light"
                    style="@style/ButtonStyle"/>
            </LinearLayout>





        </LinearLayout>




    </android.support.v7.widget.CardView>

</FrameLayout>