<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#434b5b"
    tools:context="olimpiadas.sena.com.olimpiadasmath.activities.settings.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <fragment
            android:id="@+id/fragment_shop_header"
            android:name="olimpiadas.sena.com.olimpiadasmath.fragments.header.HeaderFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight=".15"
            android:src="@android:drawable/arrow_down_float"
            android:rotation="90"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".15"
            android:src="@android:drawable/btn_star_big_on"
            />
        <TextView
            android:id="@+id/txt_title_ranking"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:text="SETTINGS"
            android:textColor="#fff"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/txt_music"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="MÃºsica"
            android:textColor="@color/primary_text"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swtMusic"
            android:shadowColor="@color/colorAccent"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/txt_efects"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="Efectos"
            android:textColor="@color/primary_text"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swtEfects"
            android:shadowColor="@color/colorAccent"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/txt_lenguage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="Idioma"
            android:textColor="@color/primary_text"/>

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spn_enguage"
            android:textSize="@dimen/text_size"
            android:shadowColor="@color/colorAccent"
            android:entries="@array/lenguages"
            android:textColor="@color/primary_text"/>
    </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_help"
            android:text="Ayuda sobre el juego"
            android:shadowColor="@color/colorAccent"
            android:layout_gravity="center"
            style="@style/ButtonStyle"/>

        <Button
            android:id="@+id/btn_credits"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Creditos"
            android:layout_gravity="center"
            style="@style/ButtonStyle"/>

</LinearLayout>
