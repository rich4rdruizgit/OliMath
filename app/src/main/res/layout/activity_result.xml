<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4b5465"
    android:orientation="vertical"
    tools:context="olimpiadas.sena.com.olimpiadasmath.activities.result.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <fragment
            android:id="@+id/fragment"
            android:name="olimpiadas.sena.com.olimpiadasmath.fragments.header.HeaderFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/shape_ranking"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="@string/result_title"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:src="@drawable/tutorblanco" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:background="#7e7e7e"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_result_rigth_coins"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="@string/coins_challenge"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tv_result_rigth_coins_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".2"
                        android:padding="4dp"
                        android:src="@drawable/coin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_result_rigth_answer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="@string/corrects_answers_challenge"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tv_result_rigth_answer_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".2"
                        android:padding="4dp"
                        android:src="@android:drawable/checkbox_on_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_result_wrong_answer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="right"
                        android:text="@string/time_challenge"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tv_result_wrong_answer_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".2"
                        android:padding="4dp"
                        android:src="@android:drawable/presence_away" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size" />


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:id="@+id/img_result_progress_bar1"
                            android:layout_width="70dp"
                            android:layout_height="10dp"
                            android:src="@drawable/backg" />

                        <ImageView
                            android:id="@+id/img_result_progress_bar2"
                            android:layout_width="70dp"
                            android:layout_height="10dp"
                            android:src="@drawable/clip_source" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_result_exp_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_result_share"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".9"
                android:text="PUBLICAR" />

            <Button
                android:id="@+id/btn_result_continue"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity=""
                android:layout_margin="5dp"
                android:layout_weight=".9"
                android:text="CONTINUAR" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
