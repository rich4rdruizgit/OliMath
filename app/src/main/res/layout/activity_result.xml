<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#4b5465"
    tools:context="olimpiadas.sena.com.olimpiadasmath.activities.result.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical">


        <TextView
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="TERMINADO"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size"/>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_result_rigth_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/corrects_answers"
                android:textSize="@dimen/text_size"
                android:textColor="@color/primary_text"
                />

            <TextView

                android:id="@+id/tv_result_rigth_answer_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="8"
                android:textSize="@dimen/text_size"
                android:textColor="@color/primary_text"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_result_wrong_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/incorrects_answers"
                android:textSize="@dimen/text_size"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/tv_result_wrong_answer_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2"
                android:textSize="@dimen/text_size"
                android:textColor="@color/primary_text"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_result_win_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/won"
            android:textSize="@dimen/text_size"
            android:textColor="@color/primary_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/coin" />


            <TextView
                android:id="@+id/tv_result_win_coins_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=" x 2"
                android:textSize="@dimen/text_size"
                android:textColor="@color/primary_text"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ticket" />


            <TextView
                android:id="@+id/tv_result_win_ticket_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=" x 1"
                android:textSize="@dimen/text_size"
                android:textColor="@color/primary_text"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/primary_text"/>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:id="@+id/img_result_progress_bar1"
                    android:layout_width="70dp"
                    android:layout_height="10dp"
                    android:src="@drawable/backg" />

                <ImageView
                    android:id="@+id/img_result_progress_bar2"
                    android:layout_width="70dp"
                    android:layout_height="10dp"
                    android:src="@drawable/clip_source" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_result_exp_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_result_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Continuar"
            style="@style/ButtonStyle"/>

    </LinearLayout>

</LinearLayout>
